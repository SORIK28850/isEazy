{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-4">FizzBuzz</h1>

        {% if errors %}
            <ul class="errors">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_label(form.numberStart, 'Número de inicio', {'label_attr': {'class': 'form-control-label'}}) }}
            {{ form_widget(form.numberStart, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.numberStart) }}
        </div>

        <div class="form-group">
            {{ form_label(form.numberEnd, 'Número final', {'label_attr': {'class': 'form-control-label'}}) }}
            {{ form_widget(form.numberEnd, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.numberEnd) }}
        </div>

        <button type="submit" class="btn btn-primary">Generar FizzBuzz</button>
        {{ form_end(form) }}
    </div>
{% endblock %}